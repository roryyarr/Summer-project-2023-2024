% Custom environment for MATLAB code
\newenvironment{matlabcode}
{%
  \let\lstlisting\relax               % Temporarily disable existing lstlisting definition
  \let\endlstlisting\relax            % Also disable the end of lstlisting
  \usepackage{matlab-prettifier}      % Re-enable matlab-prettifier package
  \lstset{style=Matlab-editor}        % Set MATLAB-prettifier style
  \renewcommand\lstlistingname{Matlab}% Rename lstlisting for MATLAB block
  \begin{lstlisting}
}
{\end{lstlisting}}

% Custom environment for Julia code
\newenvironment{juliacode}
{%
  \let\lstlisting\relax               % Temporarily disable existing lstlisting definition
  \let\endlstlisting\relax            % Also disable the end of lstlisting
  \usepackage{jlcode}                 % Re-enable jlcode package
  \lstset{language=Julia}             % Set Julia language style
  \renewcommand\lstlistingname{Julia} % Rename lstlisting for Julia block
  \begin{lstlisting}
}
{\end{lstlisting}}

